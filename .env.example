# ==============================================
# PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env on your production server
# and fill in the actual values
# ==============================================

# ---------------------------------------------
# Docker Hub Configuration (for CI/CD)
# ---------------------------------------------
DOCKERHUB_USERNAME=your-dockerhub-username

# ---------------------------------------------
# MongoDB Configuration
# ---------------------------------------------
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-strong-root-password-here
MONGO_DB=shiv-agri
MONGO_USER=shivagri-app
MONGO_PASSWORD=your-strong-app-password-here
MONGO_PASSWORD_ENCODED=your-strong-app-password-url-encoded

# MongoDB Connection URI
# For native MongoDB (recommended): use host.docker.internal for API container
MONGODB_URI=mongodb://shivagri-app:your-password-url-encoded@host.docker.internal:27017/shiv-agri?authSource=shiv-agri
# For Docker MongoDB: mongodb://shivagri-app:your-password-url-encoded@mongodb:27017/shiv-agri
# For direct connection (non-Docker): mongodb://shivagri-app:your-password-url-encoded@127.0.0.1:27017/shiv-agri?authSource=shiv-agri

# ---------------------------------------------
# API/Backend Configuration
# ---------------------------------------------
NODE_ENV=production
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
API_URL=https://api.yourdomain.com

# ---------------------------------------------
# Domain Configuration
# ---------------------------------------------
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com

# ---------------------------------------------
# Email Configuration (Optional - for future use)
# ---------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# ---------------------------------------------
# WhatsApp API Configuration (Optional - for future use)
# ---------------------------------------------
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_ID=your-phone-id

# ---------------------------------------------
# Google OAuth Configuration
# ---------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret
GOOGLE_CALLBACK_URL=https://yourdomain.com/api/auth/google/callback

# ---------------------------------------------
# AWS S3 Configuration (Optional - for file storage)
# ---------------------------------------------
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=shiv-agri-uploads

# ---------------------------------------------
# Backup Configuration
# ---------------------------------------------
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_TIME=02:00

# ---------------------------------------------
# Rate Limiting
# ---------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ---------------------------------------------
# CORS Configuration
# ---------------------------------------------
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
